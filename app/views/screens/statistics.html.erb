<% content_for :head do %>
<%= javascript_include_tag "screen-updater.js" %>
<%= javascript_include_tag "statistics-screen-updater.js" %>
<% end %>

<%= javascript_tag do %>
window.FAYE_ADDRESS = '<%= Settings.faye.address %>';
window.SCREEN_CHANNEL = '<%= screen_update_channel(@screen) %>';
window.QUESTION_CHANNEL = '<%= section_question_changed_channel(@screen.section) %>';
window.VOTE_CHANNEL = '<%= section_new_votes_channel(@screen.section) %>';
<% end %>

<div id="bannerImg" style="height: 768px; margin:0 auto;">
  <table border="0" cellpadding="0" cellspacing="0" style="width: 100%; height: 100%;">
    <tbody>
      <tr style="height: 10%;">
        <td colspan="10" rowspan="1">
          <img id= "HbannerI" src="/screens/infotex2012/infotex-logo.png">
          </img>
          <img id= "HbannerT" src="/screens/infotex2012/tyumen.png">
          </img>
          <img id= "HbannerQ" src="/screens/infotex2012/qrgolos.png">
          </img>
	    </td>
      </tr>
      <tr>
        <td id="blocks" colspan="4" rowspan="9" ><img src="/screens/infotex2012/blocks.png"></td>
        <td id="Mid_spaser" rowspan="9" style="width: 7%;"></td>
        <td id="content" style="width: 70%;" colspan="5" rowspan="9">
        <!-- javascript content here--->
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div id="timer" style="position:fixed; top:0; right:0; width: 200px; height: 100px; background-color: #ddd;"></div>
<%= javascript_tag do %>
$(function() {
  $('#bannerImg').height($(window).height() * 0.86);
  $('#bannerImg').width($(window).height() * 1.3);
  $('#bannerImg').css("padding", $(window).height() * 0.05);

  $('#blocks').width($('#bannerImg').width() * 0.25 );
  $('#blocks > img').width($('#bannerImg').width() * 0.25);
  $('#HbannerI').width($('#bannerImg').width() * 0.25);

  $('#HbannerT').height($(window).height() * 0.0685);
  $('#HbannerT').css("padding-bottom", $(window).height() * 0.04);

  $('#HbannerQ').height($(window).height() * 0.0685);
  $('#HbannerQ').css("padding-bottom", $(window).height() * 0.04);

});
<% end %>
