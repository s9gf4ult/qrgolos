<% content_for :head do %>
<%= javascript_include_tag "#{Settings.faye.address}/client.js" %>
<%= javascript_include_tag "screen-updater.js" %>
<% end %>

<%= javascript_tag do %>
window.FAYE_ADDRESS = '<%= Settings.faye.address %>';
window.SCREEN_CHANNEL = '<%= screen_update_channel(@screen) %>';
<% end %>

<div class="formHeader"><%= @section.name %></div>

<table id="twittTable">
  <% @section.active_twitts.limit(20).each do |twitt| %>
<tr>
  <td>
    <b><%= twitt.anonymous.formated_name %></b>:
    <div class="tableMsg"><%= twitt.text%></div>
  <td/>
<tr/>
  <% end %>
</tr>
</table>
