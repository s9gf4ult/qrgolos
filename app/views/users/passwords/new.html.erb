<div id="formHeader"><%= (t "buttons.forgotPassword") %></div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-wrapper-login"><%= f.label (t :email) %><br />
  <%= f.email_field :email %></div>

 <br />
<hr>
  <div class="actions">
     <%= f.submit (t "buttons.forgot"), :class => "button", :style => "float: right;" %>
</div>
<% end %>  
  
  

