<div class="bodyBox">
  <ul id="breadcrumbs-one">
     <% raw_breadcrumbs.each do |x| %>
     <li>
       <%= x %>
     </li>
     <% end %>
  </ul>
  <%= yield %>
</div>

<!--end bodyBox-->

<div id="footer">
    <ul class="footerLinks">
        <li><a href="#"><%= t :AboutAs %></a></li>
        <li><a href="#">FAQ</a></li>
        <li><a href="#"><%= t :Contact %></a></li>
    </ul>
    <p class="footerCopyright">&copy;IRIS.Integration</p>
</div>


</body>
</html>
