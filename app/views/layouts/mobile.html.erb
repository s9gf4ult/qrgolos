<!DOCTYPE html>
<html>
<head>
  <title>Ruvote</title>
  <%= stylesheet_link_tag    "mobile", :media => "all" %>
  <%= yield :head %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="messages">
	    <% if flash[:notice] %>
	      <p class="notice"><%= flash[:notice] %></p>
	    <% end %>
	    <% if flash[:alert] %>
	      <p class="alert"><%= flash[:alert] %></p>
	    <% end %>
	    <% if flash[:error] %>
	      <p class="error"><%= flash[:error] %></p>
	    <% end %>
	</div>
<%= yield %>
</body>
</html>
