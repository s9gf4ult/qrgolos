<%= content_for :head do %>
<%= javascript_include_tag "#{Settings.faye.address}/client.js" %>
<%= javascript_include_tag "anonymous-chat.js" %>
<% end %>

<%= javascript_tag do %>
window.FAYE_ADDRESS = '<%= Settings.faye.address %>';
window.TWITT_CHANNEL = '<%= section_new_twitt_channel(@anonymous.section) %>';
<% end %>

<div>
  <b><%= t "sections.name" %></b>
  <%= @anonymous.section.name %>
</div>
<%= link_to (t 'votes.do-vote'), s_anonymous_path(@anonymous) %>
<div>
  <div id="twitts_list">
  </div>
  <div>
    <%= render 'twitt' %>
  </div>
</div>
