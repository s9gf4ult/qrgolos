<% content_for :head do %>
<%= javascript_include_tag "mobile/anonymous-name" %>
<% end %>

<!-- header -->
<div data-role="page">

    <div data-role="header" data-position="fixed">
	<a href="index.html" data-rel="back">Назад</a>
	<h1>Чат</h1>
    </div>

    <div data-role="content">
	<div class="panel" title="QR-голос" selected="true" id="first">
	<h2><%= label_tag 'anonymous[name]', (t 'anonymous.enter-your-name') %></h2>

	<%= form_tag set_name_path(@anonymous.aid), :class => "panel", :target => "_self" do %>
	    <div class="row">
		<%= text_field_tag 'anonymous[name]', nil,  :id => 'name-text', :class => "nname" %>
	    </div>
	    <%= submit_tag (t 'login') %>
	<% end %>
    </div>
</div>
