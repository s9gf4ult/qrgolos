<h1>Listing answer_variants</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Text</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answer_variants.each do |answer_variant| %>
  <tr>
    <td><%= answer_variant.question_id %></td>
    <td><%= answer_variant.text %></td>
    <td><%= answer_variant.position %></td>
    <td><%= link_to 'Show', answer_variant %></td>
    <td><%= link_to 'Edit', edit_answer_variant_path(answer_variant) %></td>
    <td><%= link_to 'Destroy', answer_variant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

