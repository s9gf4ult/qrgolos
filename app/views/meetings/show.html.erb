<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @meeting.name %>
</p>

<p>
  <b>Descr:</b>
  <%= @meeting.descr %>
</p>

<h1>Список секций</h1>

<table>
  <tr>
    <th>Название</th>
    <th></th>
    <th></th>
  </tr>

<% @meeting.sections.each do |section| %>
  <tr>
    <td><%= link_to section.name, section  %></td>
    <td><%= link_to 'Edit', edit_section_path(section) %></td>
    <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<div>
  <%= link_to 'Новая секция', new_meeting_section_path(@meeting) %>
</div>

<div>
  <%= link_to 'Edit', edit_meeting_path(@meeting) %> |
  <%= link_to 'Back', meetings_path %>
</div>
