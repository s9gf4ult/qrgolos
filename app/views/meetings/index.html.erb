<% if user_signed_in? %>
  <div id="formHeader">Мои мероприятия</div>

    <div id="mtng">
      <% @my_meetings.each do |meeting| %>
      <div class="name"><%= link_to meeting.name, meeting %></div>
      <div class="descr"><div><%= meeting.descr %></div>
	<div class="edit">
	  <%= link_to (t "buttons.edit"), edit_meeting_path(meeting), :class => "small_button" %>
	  <%= link_to (t "buttons.delete"), meeting, method: :delete, data: { confirm: 'Удалить ?' }, :class => "small_button"%>
	</div>
      </div>
      <% end %>
    </div>

<% end %>

<% if user_signed_in? %>
  <div id="formHeader">Все мерприятия</div>
<% else %>
  <div id="formHeader">Мероприятия</div>
<% end %>

<div id="mtng">
<% @meetings.each do |meeting| %>
    <div class="name"><%= link_to meeting.name, meeting %></div>
    <div class="descr"><%= meeting.descr %></div>
<% end %>
</div>

<hr>
