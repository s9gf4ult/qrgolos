<div id="formHeader"><%= (t "login") %></div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="input-wrapper-login"><%= f.label (t :email) %><br />
  <%= f.email_field :email %></div>

  <br />

  <div class="input-wrapper-login"><%= f.label (t :password) %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <br />
    <div><%= f.check_box :remember_me %> <%= f.label (t "rememberMe") %></div>
  <% end -%>

<hr>
  <div class="actions">
    <%= link_to (t "buttons.fogotPassword"), new_password_path(resource_name), :class => "small_button" %>
  <%= f.submit (t "login"), :class => "button", :style => "float: right;" %>
</div>
<% end %>