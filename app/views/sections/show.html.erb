<p id="notice"><%= notice %></p>

<p>
  <b><%= t "sections.name" %></b>
  <%= @section.name %>
</p>

<p>
  <b><%= t "anonymous_count" %></b>
  <%= @section.anonymous_count %>
</p>

<h1><%= t "sections.questions" %></h1>

<table>
  <tr>
    <th>Вопрос</th>
    <th>Состояние</th>
    <th>Тип</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @section.questions.each do |question| %>
  <tr>
    <td><%= link_to question.question, question %></td>
    <td><%= t question.state %></td>
    <td><%= t question.kind %></td>
    <td><%= link_to (t "questions.activate"), activate_question_path(question), :method => :post %></td>
    <td><%= link_to (t "questions.cancel"), cancel_question_path(question), :method => :post %></td>
    <td><%= link_to 'Edit', edit_question_path(question) %></td>
    <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<div>
  <%= link_to 'New Question', new_section_question_path(@section) %>
</div>

<div>
  <%= link_to (t :edit), edit_section_path(@section) %> |
  <%= link_to (t :back), @section.meeting %>
</div>
